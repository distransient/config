##### Files and directories #####
# User-independent music library
music_directory	"~/music"

# Set the MPD internal playlist directory. The purpose of this
# directory is storage for playlists created by MPD. 
playlist_directory "~/.mpd/playlists"

# Set the location of the MPD database. This file is used to
# load the database at server start up and store the database while the 
# server is not up. 
db_file	"~/.mpd/database"

# Set the log file into the User dir, not the syslog
log_file "~/.mpd/log"

# Set the location of the file which stores the process ID
# for use of mpd --kill and some init scripts.
pid_file "~/.mpd/pid"

# Set the location of the file which contains information about
# most variables to get MPD back into the same general shape it was in before
# it was brought down. 
state_file "~/.mpd/state"

# The location of the sticker database.  This is a database which
# manages dynamic information attached to songs.
sticker_file "~/.mpd/sticker.sql"

##### General Options #####
# Run as me
user "michael"
group "michael"
# For me
bind_to_address	"localhost"
# Update db whenever the dir changes
auto_update "yes"

# Input
input {
  plugin "curl"
}

##### Audio Output #####
# for sound
audio_output {
	type		"pulse"
	name		"MPD"
}

#for visualizer
audio_output {
  type    "fifo"
  name    "visualizer"
  path    "/tmp/mpd.fifo"
  format  "44100:16:2"
}

##### Character Encoding #####
filesystem_charset		"UTF-8"
id3v1_encoding			"UTF-8"
